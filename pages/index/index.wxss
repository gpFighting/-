page {
	background-color: #f0f0f0;
}
swiper {
	width: 100%;
	height: 320rpx;
}
swiper swiper-item{
	width: 100%;
	height: 100%;
}
swiper swiper-item navigator {
	width: 100%;
	height: 100%;
}
swiper swiper-item image {
	width: 100%;
	height: 100%;
}
.grids {
	display: flex;
	flex-wrap: wrap;
	width: 750rpx;
	height: 750rpx;
	border-top: 1rpx solid #ccc;
	border-left: 1rpx solid #ccc;
	font-size: 24rpx;
	color: #555;
	background-color: #fff;
}
.grids .item {
	display: flex;
	flex-direction: column;
	width: 33.33333%;
	height: 33.33333%;
	justify-content: center;
	align-items: center;
	border-bottom: 1rpx solid #ccc;
	border-right: 1rpx solid #ccc;
	box-sizing: border-box;
}
.grids .item image {
	width: 70rpx;
	height: 70rpx;
	margin-bottom: 10rpx;
}
.link {
	background-color: #fff;
	display: flex;
	justify-content: space-around;
	margin: 20rpx 0;
	padding: 20rpx 0;
}
.link image {
	width: 320rpx;
	height: 120rpx;
}